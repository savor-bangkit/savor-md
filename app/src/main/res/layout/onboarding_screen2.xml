<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF1FF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180px"
        android:fontFamily="@font/archivo"
        android:text="I don’t remember what’s in my fridge"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:fontFamily="@font/archivo"
        android:text="What do I do with all these onions?"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:fontFamily="@font/archivo"
        android:text="Is this produce still good to eat?"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80px"
        android:fontFamily="@font/archivo"
        android:text="I wish there was an app that\ncould keep track of all this for me"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:fontFamily="@font/archivo"
        android:text="Sound familiar?\nLook no further."
        android:textAlignment="center"
        android:textSize="43sp"
        android:textStyle="bold" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFF1FF"
    tools:context=".view.InputOptionActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330px"
        android:fontFamily="@font/alata"
        android:text="How would you like\nto input your items?"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginLeft="76px"
        android:layout_marginTop="80px"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/camera"
        android:text="Take a photo of your grocery"
        android:textColor="@color/black"
        android:textAlignment="center" />

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginLeft="76px"
        android:layout_marginTop="80px"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/inputmanual"
        android:text="Input manually"
        android:textColor="@color/black"
        android:textAlignment="center" />
</LinearLayout>